nav.navbar.navbar-default
	.container-fluid

		.navbar-header
			button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#header-menu', aria-expanded='false')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='/') Revolt

		#header-menu.collapse.navbar-collapse
			ul.nav.navbar-nav
				if !user
					li
						a(href='/registration')
							| Registration

			form.navbar-form.navbar-right(action='/i18n/select', method='POST')
				!= resolveForm('core/forms/form').render()
				.btn-group
					button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')= __('locales.' + request.getLocale())
						| &nbsp;
						span.caret
					ul.dropdown-menu
						each locale in app.conf.get('i18n.locales')
							if locale !== request.getLocale()
								li: a: button.btn.btn-default.btn-block(type='submit', name='locale', value=locale)= __('locales.' + locale)


			if user
				ul.nav.navbar-nav.navbar-right
					li.dropdown
						a.dropdown-toggle(href='#', data-toggle='dropdown', role='button')
							= user.get('name')
							span.caret
						ul.dropdown-menu
							li
								a(href='/user/self') Dashboard
							li
								a(href='/totp') Totp settings
							li.divider(role='separator')
							li
								a(href='/auth/remove') Remove yourself
							li.divider(role='separator')
							li
								a(href='/auth/logout') Logout
			else
				form.navbar-form.navbar-right(role='login', method='POST', action='/auth/login')
					!= resolveForm('core/forms/login.header').render()
					button.btn.btn-default(type='submit') Submit
				ul.nav.navbar-nav.navbar-right
					li: a(href='/auth/google') Google
					li: a(href='/auth/imgur') Imgur
					li: a(href='/auth/github') GitHub

