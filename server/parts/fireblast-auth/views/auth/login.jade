extends /layout

block content
	.row
		.col-md-4.col-md-offset-4
			.login-panel.panel.panel-default
				.panel-heading
					h3.panel-title Please Sign In
				.panel-body
					form(method='POST', action='/auth/login')
						fieldset
							!= resolveForm('fireblast-auth', 'login').render()
							button.btn.btn-lg.btn-success.btn-block Login
